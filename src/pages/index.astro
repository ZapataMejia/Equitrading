---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title={`Tu Aliado Experto en Ingeniería y Equipos Industriales <span class="text-yellow-500 dark:text-yellow-400"></span>`}
    subTitle="Comercializamos equipos de alta calidad y ofrecemos servicios de inspección y pruebas técnicas para asegurar la continuidad y eficiencia de tus operaciones."
    primaryBtn="Explora Nuestras Soluciones"
    primaryBtnURL="#features-navs"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">4.8</span> / 5`}
    starCount={4}
    reviews={`De más de <span class="font-bold">12.8k</span> reseñas`}
    src={heroImage}
    alt="Productos y soluciones industriales ofrecidas por EQUITRADING"
  />

  <ClientsSection
    title="Confiados por Líderes de la Industria"
    subTitle="Colaboramos con empresas de toda Latinoamérica, garantizando la calidad y eficiencia en cada entrega."
  />

  <FeaturesGeneral
    title="Soluciones Especializadas para el Sector Industrial"
    subTitle="En EQUITRADING, ofrecemos una gama completa de equipos, transformadores, y servicios de inspección que cumplen con los estándares más exigentes del mercado. Nuestra experiencia nos permite ofrecer soluciones personalizadas y eficientes para cada cliente."
    src={featureImage}
    alt="Equipos y servicios de EQUITRADING"
    features={features}
  />

  <FeaturesNavs
    id="features-navs"
    title={`Soluciones a la medida para satisfacer las necesidades de tu negocio con <span class="text-yellow-500 dark:text-yellow-400">EQUITRADING</span>`}
    tabs={[
      {
        heading: "Equipos Industriales y Maquinaria de Segunda Mano",
        content:
          "Optimizamos tu inversión con maquinaria de segunda mano certificada y en excelente estado, ideal para diversos sectores industriales.",
        svg: "tools",
        src: tools,
        alt: "Maquinaria industrial en campo de operación",
        first: true,
      },
      {
        heading: "Transformadores de Potencia y Accesorios",
        content:
          "Ofrecemos una amplia gama de transformadores de potencia, accesorios, y sistemas de secado automático, adecuados para diferentes necesidades industriales.",
        svg: "dashboard",
        src: dashboard,
        alt: "Transformadores y equipos eléctricos",
        second: true,
      },
      {
        heading: "Servicios de Inspección y Pruebas Técnicas",
        content:
          "Aseguramos la calidad de tus equipos con inspecciones rigurosas y pruebas técnicas que garantizan el cumplimiento de todas las normativas vigentes.",
        svg: "house",
        src: construction,
        alt: "Equipo realizando inspecciones y pruebas",
      },
    ]}
  />

  <TestimonialsSection
    title="Lo Que Nuestros Clientes Dicen"
    subTitle="La calidad de nuestros productos y servicios ha ayudado a muchas empresas a optimizar sus operaciones y a reducir costos."
    testimonials={[
      {
        content:
          "EQUITRADING transformó nuestra forma de manejar los activos industriales. Con su maquinaria certificada y servicios de inspección, hemos mejorado la eficiencia operativa significativamente.",
        author: "Daniela Medina",
        role: "Gerente de Operaciones | Industria Energética S.A.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "325",
        description:
          "Maquinarias vendidas, incluyendo transformadores y equipos especializados.",
      },
      {
        count: "2,500",
        description:
          "Pruebas técnicas realizadas para asegurar el cumplimiento de los estándares de calidad.",
      },
      {
        count: "100",
        description:
          "Servicios especializados de inspección ofrecidos.",
      },
      {
        count: "70",
        description: "Inspecciones con certificación de calidad completadas.",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas Frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="¡Contáctanos!"
    subTitle="En EQUITRADING, estamos listos para ayudarte con cualquier consulta sobre nuestros productos y servicios. Completa el formulario y uno de nuestros expertos se pondrá en contacto contigo pronto."
    url="./contact.astro"
  />
</MainLayout>
